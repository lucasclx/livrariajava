<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Livraria Java</display-name>
    <description>Sistema de Livraria Online</description>

    <!-- Configurações da aplicação -->
    <context-param>
        <param-name>app.name</param-name>
        <param-value>Livraria Mil Páginas</param-value>
    </context-param>
    
    <context-param>
        <param-name>app.version</param-name>
        <param-value>1.0.0</param-value>
    </context-param>

    <!-- Página inicial -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- DataSource JNDI -->
    <resource-ref>
        <description>Livraria Database</description>
        <res-ref-name>jdbc/livraria</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!-- Filtros -->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.livraria.filters.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Controllers/Servlets -->
    <servlet>
        <servlet-name>LojaController</servlet-name>
        <servlet-class>com.livraria.controllers.LojaController</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LojaController</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>LojaController</servlet-name>
        <url-pattern>/loja/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>com.livraria.controllers.AdminController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/admin/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AuthController</servlet-name>
        <servlet-class>com.livraria.controllers.auth.AuthController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>AuthController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>AuthController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>AuthController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CartController</servlet-name>
        <servlet-class>com.livraria.controllers.CartController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>CartController</servlet-name>
        <url-pattern>/cart/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LivroController</servlet-name>
        <servlet-class>com.livraria.controllers.LivroController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>LivroController</servlet-name>
        <url-pattern>/admin/livros/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CategoriaController</servlet-name>
        <servlet-class>com.livraria.controllers.CategoriaController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>CategoriaController</servlet-name>
        <url-pattern>/admin/categorias/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ApiController</servlet-name>
        <servlet-class>com.livraria.controllers.ApiController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ApiController</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PerfilController</servlet-name>
        <servlet-class>com.livraria.controllers.PerfilController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>PerfilController</servlet-name>
        <url-pattern>/perfil/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FavoriteController</servlet-name>
        <servlet-class>com.livraria.controllers.FavoriteController</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>FavoriteController</servlet-name>
        <url-pattern>/favorites/*</url-pattern>
    </servlet-mapping>

    <!-- Listeners -->
    <listener>
        <listener-class>com.livraria.listeners.ApplicationContextListener</listener-class>
    </listener>
    
    <listener>
        <listener-class>com.livraria.listeners.SessionListener</listener-class>
    </listener>

    <!-- Configurações de sessão -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Páginas de erro -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>

</web-app>