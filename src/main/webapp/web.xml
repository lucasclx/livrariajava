<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Livraria Mil Páginas</display-name>
    <description>Sistema de E-commerce para Livraria</description>

    <!-- Configuração da aplicação -->
    <context-param>
        <param-name>app.name</param-name>
        <param-value>Livraria Mil Páginas</param-value>
    </context-param>
    <context-param>
        <param-name>app.version</param-name>
        <param-value>1.0.0</param-value>
    </context-param>

    <!-- Configuração do DataSource -->
    <resource-ref>
        <description>Conexão com banco de dados MySQL</description>
        <res-ref-name>jdbc/livraria</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!-- Listeners -->
    <listener>
        <listener-class>com.livraria.listeners.ApplicationContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.livraria.listeners.SessionListener</listener-class>
    </listener>

    <!-- Filtros -->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.livraria.filters.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>StaticResourceCacheFilter</filter-name>
        <filter-class>com.livraria.filters.StaticResourceCacheFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>StaticResourceCacheFilter</filter-name>
        <url-pattern>*.css</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>StaticResourceCacheFilter</filter-name>
        <url-pattern>*.js</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>StaticResourceCacheFilter</filter-name>
        <url-pattern>*.png</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>StaticResourceCacheFilter</filter-name>
        <url-pattern>*.jpg</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>StaticResourceCacheFilter</filter-name>
        <url-pattern>*.gif</url-pattern>
    </filter-mapping>

    <!-- Registrar Servlets Principais -->
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>com.livraria.controllers.IndexServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern></url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LojaController</servlet-name>
        <servlet-class>com.livraria.controllers.LojaController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LojaController</servlet-name>
        <url-pattern>/loja/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.livraria.controllers.auth.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>com.livraria.controllers.auth.RegisterController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>com.livraria.controllers.auth.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CartController</servlet-name>
        <servlet-class>com.livraria.controllers.CartController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartController</servlet-name>
        <url-pattern>/cart/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CheckoutController</servlet-name>
        <servlet-class>com.livraria.controllers.CheckoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckoutController</servlet-name>
        <url-pattern>/checkout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PerfilController</servlet-name>
        <servlet-class>com.livraria.controllers.PerfilController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PerfilController</servlet-name>
        <url-pattern>/perfil/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>FavoriteController</servlet-name>
        <servlet-class>com.livraria.controllers.FavoriteController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FavoriteController</servlet-name>
        <url-pattern>/favorites/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SearchController</servlet-name>
        <servlet-class>com.livraria.controllers.SearchController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchController</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ApiController</servlet-name>
        <servlet-class>com.livraria.controllers.ApiController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ApiController</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CartApiController</servlet-name>
        <servlet-class>com.livraria.controllers.api.CartApiController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CartApiController</servlet-name>
        <url-pattern>/api/cart/*</url-pattern>
    </servlet-mapping>

    <!-- Servlets de Admin -->
    <servlet>
        <servlet-name>AdminController</servlet-name>
        <servlet-class>com.livraria.controllers.AdminController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminController</servlet-name>
        <url-pattern>/admin/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LivroController</servlet-name>
        <servlet-class>com.livraria.controllers.LivroController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LivroController</servlet-name>
        <url-pattern>/livros/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CategoriaController</servlet-name>
        <servlet-class>com.livraria.controllers.CategoriaController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoriaController</servlet-name>
        <url-pattern>/categorias/*</url-pattern>
    </servlet-mapping>

    <!-- Configuração de sessão -->
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>false</secure>
        </cookie-config>
    </session-config>

    <!-- Páginas de erro -->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/error/500.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/error/403.jsp</location>
    </error-page>

    <!-- Página de boas-vindas -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

</web-app>