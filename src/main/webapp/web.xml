<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Livraria Mil Páginas</display-name>
    <description>Sistema de E-commerce para Livraria</description>

    <!-- Parâmetros de inicialização da aplicação -->
    <context-param>
        <param-name>app.name</param-name>
        <param-value>Livraria Mil Páginas</param-value>
    </context-param>
    <context-param>
        <param-name>app.version</param-name>
        <param-value>1.0.0</param-value>
    </context-param>

    <!-- Configuração do DataSource JNDI -->
    <resource-ref>
        <description>Conexão com banco de dados MySQL</description>
        <res-ref-name>jdbc/livraria</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!-- Listeners -->
    <listener>
        <listener-class>com.livraria.listeners.ApplicationContextListener</listener-class>
    </listener>
    <listener>
        <listener-class>com.livraria.listeners.SessionListener</listener-class>
    </listener>

    <!-- Filtros -->
    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.livraria.filters.EncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- CORRIGIDO: Servlet para página inicial apenas para "/" -->
    <servlet>
        <servlet-name>RootRedirectServlet</servlet-name>
        <servlet-class>com.livraria.controllers.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RootRedirectServlet</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <!-- Servlet para autenticação -->
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>com.livraria.controllers.auth.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>com.livraria.controllers.auth.RegisterController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutController</servlet-name>
        <servlet-class>com.livraria.controllers.auth.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- Configuração de sessão -->
    <session-config>
        <session-timeout>30</session-timeout>
        <cookie-config>
            <http-only>true</http-only>
            <secure>false</secure> <!-- Mudar para true em produção com HTTPS -->
        </cookie-config>
    </session-config>

    <!-- Páginas de erro -->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/error/500.jsp</location>
    </error-page>
    <error-page>
        <error-code>403</error-code>
        <location>/WEB-INF/error/403.jsp</location>
    </error-page>

    <!-- Configurações de segurança -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Admin Area</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Welcome files -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Configuração MIME types -->
    <mime-mapping>
        <extension>woff</extension>
        <mime-type>application/font-woff</mime-type>
    </mime-mapping>
    <mime-mapping>
        <extension>woff2</extension>
        <mime-type>application/font-woff2</mime-type>
    </mime-mapping>

</web-app>